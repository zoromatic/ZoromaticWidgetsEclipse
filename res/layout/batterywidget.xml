<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/batteryWidget"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:layout_margin="4dp"
  android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageViewBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/battery_001" 
        android:contentDescription="@string/batterydesc"/>

   <TextView
       android:id="@+id/textViewBatteryStatus"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/batterystatus"        
       android:textAppearance="?android:attr/textAppearanceLarge" />
    
</LinearLayout>
