<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_margin="0dp">
    
    <ImageView
	    android:id="@+id/backgroundImage"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:src="@drawable/background"
	    android:scaleType="fitXY"
	    android:contentDescription="@string/app_name"/>
    
    <LinearLayout
	    android:id="@+id/clockWidget"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center|center_vertical"
	    android:weightSum="1.0"
	    android:baselineAligned="false"
	    android:orientation="vertical" 
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp" >
	    
        <LinearLayout
		    android:id="@+id/clockLayout"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight=".7"
		    android:gravity="center|center_vertical"
		    android:orientation="vertical" >

            <TextView
		        android:id="@+id/textViewDate"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text="@string/datebatterytxt"
		        android:textSize="14sp"
		        android:visibility="invisible" />
            
            <LinearLayout
			        android:id="@+id/timeLayout"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:weightSum="1.0"
			        android:gravity="center|center_horizontal"
			        android:orientation="horizontal" >
            
				    <TextView
				        android:id="@+id/textViewClockHour"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".45"
				        android:gravity="center"
				        android:text="@string/tempempty"
				        android:background="@drawable/bck_left"
				        android:textSize="64sp" />
				    
				    <TextView
				        android:id="@+id/textViewClockSpace"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".1"
				        android:gravity="center"
				        android:text=""
				        android:textSize="64sp" />
				    
				    <TextView
				        android:id="@+id/textViewClockMinute"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".45"
				        android:gravity="center"
				        android:text="@string/tempempty"
				        android:background="@drawable/bck_right"
				        android:textSize="64sp" />
			</LinearLayout>
				    		    
		</LinearLayout>
	    
		<LinearLayout
		    android:id="@+id/weatherLayout"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight=".3"
		    android:weightSum="1.0"
		    android:orientation="horizontal" >
		    
		    <LinearLayout
		        android:id="@+id/locationLayout"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight=".3"
		        android:gravity="center|center_vertical"
		        android:orientation="vertical" >
			    
			    <TextView
			        android:id="@+id/textViewLoc"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/locationempty"
			        android:textSize="12sp" />
	
			    <TextView
			        android:id="@+id/textViewDesc"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/locationempty"
			        android:textSize="12sp" />
			</LinearLayout>
			
		    <TextView
		        android:id="@+id/spaceLayout"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight=".4"
		        android:gravity="center"
		        android:text=""
		        android:textSize="72sp" />		    
		    
		    <TextView
		        android:id="@+id/textViewTemp"
		        android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.3"
				android:gravity="center"
		        android:text="@string/tempempty"
		        android:textSize="32sp" />

		</LinearLayout>		
	</LinearLayout>
	
    <ImageView
    	android:id="@+id/imageViewWeather"
    	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	android:layout_alignParentBottom="true"
       	android:scaleType="fitCenter"
       	android:contentDescription="@string/weatherdesc"
    	android:src="@drawable/weather_unknown" />
</RelativeLayout>