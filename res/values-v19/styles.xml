<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<style name="AlertDialogDark" parent="Theme.AppCompat.Dialog">
	    <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
	</style>
	
	<style name="AlertDialogLight" parent="Theme.AppCompat.Light.Dialog">
	    <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
	</style>
	
	<style name="ThemeLight" parent="ThemeLightBasic">    
        <item name="android:alertDialogTheme">@style/AlertDialogLight</item>   
        <item name="android:windowTranslucentStatus">true</item>
	    <item name="android:windowTranslucentNavigation">true</item>           
    </style>
    
    <style name="ThemeDark" parent="ThemeDarkBasic">
        <item name="android:alertDialogTheme">@style/AlertDialogDark</item>
        <item name="android:windowTranslucentStatus">true</item>
	    <item name="android:windowTranslucentNavigation">true</item>               
    </style>       
       
</resources>