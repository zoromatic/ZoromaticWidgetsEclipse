<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Widget.AlertDialogPro.Material.Button" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:minHeight">@dimen/adp_mtrl_alert_dialog_button_bar_height</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:maxLines">2</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Base.Widget.AlertDialogPro.ListView" parent="android:Widget.Material.ListView">
        <item name="android:listSelector">@drawable/background_control</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="Base.Widget.AlertDialogPro.Material.Light.Button" parent="android:Widget.Material.Light.Button.Borderless.Colored">
        <item name="android:minHeight">@dimen/adp_mtrl_alert_dialog_button_bar_height</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:maxLines">2</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Base.Widget.AlertDialogPro.Light.ListView" parent="android:Widget.Material.Light.ListView">
        <item name="android:listSelector">@drawable/background_control</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

</resources>